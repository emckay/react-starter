{
    "extends": "airbnb",
    "plugins": ["mocha"],
    "env": {
        "mocha": true
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1}],
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "arrow-body-style": ["error", "as-needed"],
        "no-console": "off",
        "no-trailing-spaces": "warn",
        "no-unused-vars": "warn",
        "eol-last": "warn",
        "global-require": "off"
    },
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    }
}
